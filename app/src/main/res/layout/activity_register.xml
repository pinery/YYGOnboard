<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.cimcitech.yygonboard.widget.MyAppTitleBar
            android:id="@+id/title_bar_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/user_name_tv"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:background="@mipmap/login_input_icon"
            android:hint="请输入您的手机号"
            android:inputType="numberDecimal"
            android:maxLength="11"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:textColor="#333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="18dip"
            android:background="@mipmap/login_input_icon"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/code_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="numberDecimal"
                android:paddingLeft="25dip"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="0.5dip"
                android:layout_height="30dip"
                android:layout_gravity="center_vertical"
                android:background="#333333" />

            <Button
                android:id="@+id/get_code_bt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:text="获取验证码"
                android:textColor="#333333"
                android:textSize="15sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/user_password_tv"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="18dip"
            android:background="@mipmap/login_input_icon"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/confirm_password_et"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="18dip"
            android:background="@mipmap/login_input_icon"
            android:hint="请再次输入您设置的密码"
            android:inputType="textPassword"
            android:paddingLeft="25dip"
            android:paddingRight="25dip"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="15sp" />

        <Button
            android:id="@+id/register_submit_bt"
            android:layout_width="match_parent"
            android:layout_height="48dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="30dip"
            android:background="@mipmap/login_submit_icon"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:id="@+id/finish_bt"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@mipmap/register_btn_icon"
        android:text="已有账号，马上登录"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</RelativeLayout>
