<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip">

        <me.fangx.common.widget.loading.ProgressView
            android:id="@+id/pull_to_refresh_load_progress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/pull_to_refresh_loadmore_text"
            android:layout_toStartOf="@+id/pull_to_refresh_loadmore_text" />

        <TextView
            android:id="@+id/pull_to_refresh_loadmore_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="正在加载..."
            android:textColor="#bbbbbb"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>